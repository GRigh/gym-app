<form method="post" action="{{ path('alimento_delete', {'id': alimento.id}) }}" onsubmit="return confirm('Sei sicuro di voler eliminare questo alimento?')">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ alimento.id) }}">
    <button type="submit">Elimina</button>
</form>
