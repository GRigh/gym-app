{% extends 'base.html.twig' %}

{% block title %}Lista Alimenti{% endblock %}

{% block body %}
 <div class="container-fluid">
        <div class="row">
            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <h1>Lista Alimenti</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Calorie</th>
                <th>Proteine</th>
                <th>Grassi</th>
                <th>Carboidrati</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            {% for alimento in alimenti %}
                <tr>
                    <td>{{ alimento.id }}</td>
                    <td>{{ alimento.nome }}</td>
                    <td>{{ alimento.calorie }}</td>
                    <td>{{ alimento.proteine }}</td>
                    <td>{{ alimento.grassi }}</td>
                    <td>{{ alimento.carboidrati }}</td>
                    <td>
                        <a href="{{ path('alimento_show', {'id': alimento.id}) }}">Mostra</a>
                        <a href="{{ path('alimento_edit', {'id': alimento.id}) }}">Modifica</a>
                        <a href="{{ path('alimento_delete', {'id': alimento.id}) }}" onclick="return confirm('Sei sicuro di voler eliminare questo alimento?')">Elimina</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('alimento_new') }}">Nuovo Alimento</a>
            </main>
        </div>
    </div>
    
{% endblock %}
